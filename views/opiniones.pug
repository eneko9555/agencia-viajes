extends ./layout/index

block contenido
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}

        blockquote.text-center Nuestros clientes 
        .row.testimoniales
            each opinion in opiniones
                .col-md-6.col-lg-4.mb-4 
                    .card
                        .card-body 
                            blockquote.blockquote 
                            p.mb-0 
                                |  #{opinion.mensaje}
                            footer.blockquote-footer 
                                |  #{opinion.nombre} 

        h2.text-center.mt-5 Agrega tu opinión

        if(errores)
            each error in errores 
                .alert.col.alert-danger.text-center= error.mensaje

        .row.justify-content-center.mb-5
            .col-md-6
                form(action="/opiniones" method="POST")
                    .form-group 
                        label(for="nombre") Nombre 
                        input#nombre(type="text", placeholder="Escribe tu nombre...", name="nombre", class="form-control", value= nombre)
                    .form-group 
                        label(for="correo") Correo Electrónico
                        input#correo(type="text", placeholder="Escribe tu correo...", name="correo", class="form-control", value= correo)
                    .form-group 
                        label(for="mensaje") Mensaje 
                        textarea#mensaje(class="form-control", placeholder="Escribe tu mensaje..." , name="mensaje", rows="4")= mensaje
                    input.btn.btn-success.btn-block(type="submit")   